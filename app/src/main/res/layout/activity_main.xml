<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constranit1"
        android:background="#F44336"
        app:layout_constraintVertical_weight="2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/constranit2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/tv1"
            app:layout_constraintHorizontal_weight="4"
            android:text="1"
            android:textColor="#FFFF"
            android:textSize="50dp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv2"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv2"
            app:layout_constraintHorizontal_weight="6"
            android:background="#FFEB3B"
            android:text="2"
            android:textColor="#FFFF"
            android:textSize="50dp"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constranit2"
        app:layout_constraintVertical_weight="6"
        app:layout_constraintTop_toBottomOf="@id/constranit1"
        app:layout_constraintBottom_toTopOf="@id/constranit3"
        android:background="#00BCD4"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constranit2_1"
            app:layout_constraintHorizontal_weight="7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv5"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:background="#8BC34A"
                android:id="@+id/tv3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv4"
                android:textSize="50dp"
                android:textColor="#ffff"
                android:text="3"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/tv4"
                android:background="#9C27B0"
                android:text="4"
                android:textColor="#ffff"
                android:textSize="50dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/tv3"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0dp"

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv5"
            app:layout_constraintHorizontal_weight="3"
            android:background="#EE9D96DF"
            android:textSize="50dp"
            android:gravity="center"
            android:textColor="#FFFF"
            android:text="5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/constranit2_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constranit3"
        android:background="#FF9800"
        app:layout_constraintVertical_weight="2"
        app:layout_constraintTop_toBottomOf="@id/constranit2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/tv1"
            android:text="6"
            android:textColor="#FFFF"
            android:textSize="50dp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv2"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv2"
            android:background="#3F51B5"
            android:text="7"
            android:textColor="#FFFF"
            android:textSize="50dp"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>