<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint1"
        app:layout_constraintVertical_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FF5722"
        app:layout_constraintBottom_toTopOf="@id/constraint2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textSize="50dp"
            android:gravity="center"
            android:textColor="#FFFF"
            android:text="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint2"
        app:layout_constraintVertical_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFEB3B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraint1">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="#FFEB3B"
            app:layout_constraintHorizontal_weight="2"
            android:id="@+id/constraint2_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/constraint2_2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:textSize="50dp"
                android:textColor="#FFFF"
                android:text="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint2_2"
            app:layout_constraintHorizontal_weight="8"
            android:background="#CDDC39"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toRightOf="@id/constraint2_1"
            app:layout_constraintRight_toRightOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint3_1"
                app:layout_constraintVertical_weight="7"
                android:background="#2196F3"
                app:layout_constraintBottom_toTopOf="@id/constraint3_2"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:gravity="center"
                    android:text="3"
                    android:textColor="#FFFF"
                    android:textSize="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint3_2"
                app:layout_constraintVertical_weight="3"
                android:background="#f20"
                app:layout_constraintTop_toBottomOf="@id/constraint3_1"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/tv4"
                    android:background="#B0278E"
                    android:textSize="50dp"
                    android:textColor="#FFFF"
                    android:text="4"
                    android:gravity="center"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/tv5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/tv5"
                    android:text="5"
                    android:textColor="#FFFF"
                    android:textSize="50dp"
                    android:gravity="center"
                    app:layout_constraintLeft_toRightOf="@id/tv4"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>