<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv4"
        android:background="#9C27B0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="#ffff"
        android:textSize="50dp"
        android:gravity="center"
        android:text="4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv3"
        android:background="#CDDC39"
        app:layout_constraintBottom_toTopOf="@id/tv4"
        app:layout_constraintRight_toLeftOf="@id/tv4"
        android:textColor="#ffff"
        android:textSize="50dp"
        android:gravity="center"
        android:text="3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv2"
        android:background="#009688"
        app:layout_constraintBottom_toTopOf="@id/tv3"
        app:layout_constraintRight_toLeftOf="@id/tv3"
        android:textColor="#ffff"
        android:textSize="50dp"
        android:gravity="center"
        android:text="2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:background="#F44336"
        app:layout_constraintBottom_toTopOf="@id/tv2"
        app:layout_constraintRight_toLeftOf="@id/tv2"
        android:textColor="#ffff"
        android:textSize="50dp"
        android:gravity="center"
        android:text="1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv5"
        android:background="#512521"
        app:layout_constraintTop_toBottomOf="@id/tv4"
        app:layout_constraintRight_toLeftOf="@id/tv4"
        android:textColor="#ffff"
        android:textSize="50dp"
        android:gravity="center"
        android:text="5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv6"
        android:background="#87443E"
        app:layout_constraintTop_toBottomOf="@id/tv5"
        app:layout_constraintRight_toLeftOf="@id/tv5"
        android:textColor="#ffff"
        android:textSize="50dp"
        android:gravity="center"
        android:text="6"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:background="#00BCD4"
        app:layout_constraintTop_toBottomOf="@id/tv6"
        app:layout_constraintRight_toLeftOf="@id/tv6"
        android:textColor="#ffff"
        android:textSize="50dp"
        android:gravity="center"
        android:text="7"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>



    </androidx.constraintlayout.widget.ConstraintLayout>