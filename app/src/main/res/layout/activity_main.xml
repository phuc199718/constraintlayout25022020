<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constranit1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#F44336"
        app:layout_constraintBottom_toTopOf="@id/constranit2"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#4CAF50"
            android:gravity="center"
            android:text="1"
            android:textColor="#ffff"
            android:textSize="50dp"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/constranit1_1" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constranit1_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintHorizontal_weight="8"
            app:layout_constraintLeft_toRightOf="@id/tv1"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="3"
                android:textColor="#ffff"
                android:textSize="50dp"
                app:layout_constraintBottom_toTopOf="@id/tv4"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#FF5722"
                android:gravity="center"
                android:text="4"
                android:textColor="#ffff"
                android:textSize="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv3" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constranit2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00BCD4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constranit1">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#CDDC39"
            android:gravity="center"
            android:text="2"
            android:textColor="#FFFF"
            android:textSize="50dp"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/constranit2_1" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constranit2_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintHorizontal_weight="6"
            app:layout_constraintLeft_toRightOf="@id/tv2"
            app:layout_constraintRight_toLeftOf="@id/constranit2_2">

            <TextView
                android:id="@+id/tv5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="5"
                android:textColor="#ffff"
                android:textSize="50dp"
                app:layout_constraintBottom_toTopOf="@id/tv6"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#FF5722"
                android:gravity="center"
                android:text="6"
                android:textColor="#ffff"
                android:textSize="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv5" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constranit2_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintLeft_toRightOf="@id/constranit2_1"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/tv7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#9C27B0"
                android:gravity="center"
                android:text="7"
                android:textColor="#ffff"
                android:textSize="50dp"
                app:layout_constraintBottom_toTopOf="@id/tv8"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#FFC107"
                android:gravity="center"
                android:text="8"
                android:textColor="#ffff"
                android:textSize="50dp"
                app:layout_constraintBottom_toTopOf="@id/tv9"
                app:layout_constraintTop_toBottomOf="@id/tv7"

            <TextView
                android:id="@+id/tv9"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#FF5722"
                android:gravity="center"
                android:text="4"
                android:textColor="#ffff"
                android:textSize="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv8" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout

    </androidx.constraintlayout.widget.ConstraintLayout>